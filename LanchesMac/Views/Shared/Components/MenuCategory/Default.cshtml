<div class="dropdown">

    <a class="btn btn-secondary dropdown-toggle" role="button"
       id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Lanches
    </a>

    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Snack" asp-action="List" style="color:black"
                   asp-route-category="@categoria.Name">@categoria.Name</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Snack" asp-action="List" asp-route-category=""
               style="color:black">Todos os Lanches</a>
        </li>
    </ul>

</div>
