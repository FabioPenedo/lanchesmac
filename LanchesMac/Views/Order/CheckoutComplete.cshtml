@model Order

<div class="container">

    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompleteMessage</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente : <strong>@Model.Name</strong>
            <p>Data do Pedido :  <strong>@Model.OrderDispatched</strong>
            <p>Número do Pedido   : <strong>@Model.Id</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>
                @if(Model.OrderItems != null)
                {
                    @foreach(var item in Model.OrderItems)
                    {
                        <tr>
                            <td><img src="@item.Snack?.ImageUrl" /></td>
                            <td>@item.Amount</td>
                            <td>@item.Snack?.Name</td>
                            <td>@item.Snack?.Price</td>
                        </tr>                
                    }
                }
            </table>

            <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalOrder).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>